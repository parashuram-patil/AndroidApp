<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onbaordingFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnboardingStep1Fragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginBottom="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            style="@style/onHoardingStep"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:text="@string/onboarding_step_2"
            android:gravity="center"
            android:layout_gravity="center" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/arrowImage"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            app:srcCompat="@drawable/right_arrow_2x" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        style="@style/onHoardingHeading"
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:text="@string/onBoardingStepHeader"
        android:layout_marginBottom="90dp" />

    <TextView
        style="@style/onHoardingDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:text="@string/onBoardingStepDescription"
        android:layout_marginBottom="25dp" />

</FrameLayout>